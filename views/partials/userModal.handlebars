<div class="modal fade custom-modal" id="userModal" tabindex="-1" role="dialog" aria-labelledby="project-modal-form" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">User Settings</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="user-form">
                <div class="modal-body">

                    <div class="form-group">
                        <label>Name:</label>
                        <input type="text" id="userName" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label>Password:</label>
                        <input type= "password" id="password-login" class="form-control" required />
                    </div>
                    
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-light" id="loginBtn">Login</button>
                    </div>

                </div>
            </form>
        </div>     
    </div>
</div>
