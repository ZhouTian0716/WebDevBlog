<header id="header">
  <div class="nav-1">
    <div class="dropdown">
      <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-bars"></i>
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <button class="dropdown-item"  data-toggle="modal" data-target="#guideModal">Guide</button>
        <button class="dropdown-item">About</button>
      </div>
    </div>
    <a href="/"><span id="logo"><span id="logo-sub">WebDev</span>BBS</span></a>
    <button id="searchBtn" data-toggle="modal" data-target="#userList"><i class="fas fa-search"></i></button>
  </div>
  <div class="nav-2">
    {{#if logged_in}}
    <a href="/dashboard"><i class="fas fa-user"></i>Dashboard</a>
    <button  id="logOutBtn"><i class="fas fa-sign-out-alt"></i>LogOut</button>
    {{else}}
    <button id="signUpBtn" data-toggle="modal" data-target="#homeModal"><i class="fas fa-user-plus"></i>SignUp</button>
    <button id="loginBtn" data-toggle="modal" data-target="#homeModal"><i class="fas fa-sign-in-alt"></i>Login</button>
    {{/if}}
  </div>
</header>

<section class="container-cards">
  <div id="cardList-header">
    <span>Current Blogs:</span>
    <button id="filterBtn"><i class="fas fa-filter"></i></button>
  </div>

  {{#each blogs as |blog| }}
  <a class="card" href="/blog/{{blog.id}}" target="_blank">
    <h3>{{blog.title}}</h3>
    <h5>Posted by: <span>{{blog.user.name}}</span></h5>
    <h5>On: <span>{{format_date blog.pub_date}}</span></h5>
    <h5>
      <span><i class="fas fa-thumbs-up"></i><span>10</span></span>
      <span><i class="fas fa-comment-dots"></i><span>10</span></span>
    </h5>
  </a>
  {{/each}}
</section>

